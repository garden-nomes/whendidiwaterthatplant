{
  "name": "waterboy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node server/dist/index.js",
    "dev": "concurrently -k \"npm:watch-*\"",
    "build": "npm run build-vue && npm run build-ts",
    "build-vue": "vue-cli-service build",
    "watch-vue": "vue-cli-service serve",
    "build-ts": "cd server && tsc",
    "watch-ts": "cd server && tsc -w",
    "watch-node": "nodemon server/dist/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "express": "^4.16.4",
    "moment": "^2.22.2",
    "mongoose": "^5.3.14",
    "morgan": "^1.9.1",
    "vue": "^2.5.17",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^7.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.3.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.12",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-typescript": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1",
    "vue-template-compiler": "^2.5.17"
  }
}
